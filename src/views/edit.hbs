<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h1>Update a task</h1>
        <hr>
        <form action="/tasks/{{task._id}}/edit" method="post">
          <input
            type="text"
            name="title"
            placeholder="title"
            value="{{task.title}}"
            class="form-control rounded-0 bg-dark text-white mb-3"
          />
          <textarea
            name="description"
            rows="3"
            placeholder="Add description"
            class="form-control rounded-0 bg-dark text-white"
          >{{task.description}}</textarea>
          <button class="btn btn-primary mt-2">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>