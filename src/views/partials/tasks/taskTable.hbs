{{#if tasks}}
  <table class="table table-borderer table-hover table-dark">
    <thead>
      <tr>
        <th>N</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                href="/tasks/{{_id}}/toogleDone"
                class="btn btn-dark"
              >Undone</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toogleDone"
                class="btn btn-success"
              >Done</a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="text-center">
    <h1>No task</h1>
    <img src="data:image/png;base64," class="w-10">
    <p>Prueba a a√±adir una tarea</p>
  </div>
{{/if}}